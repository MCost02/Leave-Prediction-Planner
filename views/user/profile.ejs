<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="styles.css">
    <title>Profile</title>
</head>

<body>
    <header class="header">
        <h1>Leave Prediction Planner</h1>
        <nav class="navigation">
            <a href="/instructor-home">Home</a>
            <a href="/">Sign Out</a>
        </nav>
    </header>

    <div class="profile-container">
        <div class="profile" style="min-height: 500px;">
            <h2>Profile</h2>
            <div class="profile-info">
                <h3>Name:</h3>
                <p>
                    <%= user.firstName + " " + user.lastName%>
                </p>
            </div>
            <div class="profile-info">
                <h3>Email:</h3>
                <p>
                    <%= user.email%>
                </p>
            </div>
            <div class="date-header">
                <h3>Significant Dates</h3>
                <form>
                    <button type="" formaction="/addDate">Add</button>
                </form>
            </div>
            <div class="dates">
                <%if(sigdates.length) {%>
                    <table>
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Description</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <%sigdates.forEach(sigdate=>{%>
                            <tr>
                                <td class="date">
                                    <%=sigdate.date%>
                                </td>
                                <td>
                                    <%if(sigdate.description) {%>
                                        â€” <%=sigdate.description%>
                                            <%} else {%>
                                                <%}%>
                                </td>
                                <td class="remove">
                                    <form>
                                        <button type="submit" formaction="/<%=sigdate.id%>?_method=DELETE"
                                            formmethod="POST">Remove</button>
                                    </form>
                                </td>
                            </tr>
                            <%});%>
                    </table>
                    <%} else {%>
                        <p>You have not added any significant dates to your profile.</p>
                        <%}%>
            </div>
            <form>
                <input type="submit" value="Edit Account Information" id="edit" formaction="/editprofile">
            </form>
        </div>
    </div>
</body>

</html>